{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1 class="text-center text-danger">Hello {{user.nom }}, vous pouvez ici gérez vos articles ! ✅</h1>

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Titre</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Image</th>
            <th scope="col">Date d'ajout</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody >
        {% for article in articles %}
            <tr>
                <th scope="row"> {{ article.id }}</th>
                <td>{{ article.nom }}</td>
                <td>{{ article.categorie }}</td>
                <td><img src="{{ asset('images/uploads/'~article.image) }}" style="width: 100px"></td>
                <td>{{ article.dateAjout |date('d/m/y') }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('updateArticle',{'article':article.id}) }}"> Modifier</a>
                    <a class="btn btn-danger" href="{{ path('deleteArticle',{'article':article.id}) }}"> Supprimer</a>
                </td>

            </tr>
        {% endfor %}

        </tbody>
    </table>
    <a class="btn btn-primary btn-lg" href="{{path('addArticle') }}"> Ajouter un nouvel article ! </a>
</div>
{% endblock %}
