{% extends 'base.html.twig' %}

{% block title %}Hello PlanetController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <h1  class="text-center text-danger">Vous pouvez modifiez votre article   âœ…</h1>
        <div >
            {{ form_start(form) }}

            {{ form_row(form.nom) }}

            {{ form_row(form.categorie) }}

            {{ form_row(form.description) }}

            {{ form_row(form.dateAjout) }}
            <h4>Image actuelle : </h4>
            <img src="{{asset('uploads/brochures/'~article.image)}}"
            {{ form_row(form.image) }}

            {{ form_end(form) }}
        </div>
        <h3 class="text-danger"> Mes erreurs </h3>
        <ul>
            {% for error in form.vars.errors.form.getErrors(true) %}
                <li class="text-danger">{{ error.message }}</li>
            {% endfor %}
        </ul>
        <a class="btn btn-primary mt-5" href="{{ path('admin') }}">Revenir a ma liste d'article </a>

    </div>

{% endblock %}

