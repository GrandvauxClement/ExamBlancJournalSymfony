{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1 class="text-center text-danger">Bienvenue sur le journal en ligne du Dauphine ! âœ…</h1>
    <div class="row">
        {% for article in articles %}

            <div class="card ml-4 mb-4" style="width: 20rem;">
                <img class="card-img-top" src="{{ asset('images/uploads/'~article.image) }}" alt="Card image cap" style="height: 200px">
                <div class="card-body">
                    <h5 class="card-title">{{ article.nom }}</h5>
                    <a href="{{path('detail',{'article':article.id})}}" class="btn btn-primary">Voir le detail </a>
                </div>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
